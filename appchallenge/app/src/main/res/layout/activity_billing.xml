<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/white"
    tools:context=".billing">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/billing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"


        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/boxxx"

        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_marginTop="250dp"
        android:id="@+id/displayamount"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="55dp"
        android:textColor="@android:color/background_dark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:id="@+id/amounteachitem"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add"
        android:background="@null"
        android:id="@+id/add"
        android:layout_marginTop="265dp"
        android:layout_toRightOf="@+id/displayamount"


        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/displayamount"
        android:src="@mipmap/reduce"
        android:id="@+id/reduce"
        android:layout_marginTop="265dp"
        android:background="@null"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mul"
        android:background="@null"
        android:layout_below="@+id/displayamount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/rs"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:layout_toRightOf="@+id/rs"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/displayamount"
        android:id="@+id/costeachitem"
        android:layout_marginTop="10dp"
        android:textSize="30dp"


        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/costgrp"
        android:layout_below="@+id/rs"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/costgrp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs cost here"
        android:textColor="@color/freshchat_black"
        android:layout_toRightOf="@+id/costgrp"
        android:layout_below="@+id/rs"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="150dp"


        android:id="@+id/costbeforegst"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs gst here"
        android:textColor="@color/freshchat_black"
        android:layout_toRightOf="@+id/costgrp"
        android:layout_below="@+id/rs"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="150dp"


        android:id="@+id/gst"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs total"
        android:textColor="@color/freshchat_black"
        android:layout_toRightOf="@+id/costgrp"
        android:layout_below="@+id/rs"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/costaftergst"
        android:textSize="20dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/proceed"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:onClick="Process"

        />

</RelativeLayout>